<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="/Scripts/jquery-1.9.0.min.js"></script>
    @Styles.Render("~/Content/css")
</head>
<body>
    @Scripts.Render("~/bundles/TransportationService")
    <div id="notify-popover" class="aboveScreen"></div>
    <div id="top-header">
        <img id="bus-logo" src="~/Images/busLogo.png" />
        <div id="header-text">Transportation Service</div>
        <div id="sign-out-text" class="hidden">Sign Out</div>
    </div>
    <div id="content">
        <div id="mainArea-header">
            Welcome to Transportation Service
        </div>
        <div id="mainArea">
            @RenderBody()
            @Html.Action("LoadView", "Admin")
        </div>
    </div>
    <div id="modal" class="modal hide"></div>
</body>
</html>
