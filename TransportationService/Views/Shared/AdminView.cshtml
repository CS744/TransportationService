@model TransportationService.Models.OutputViewModel
@{
    ViewBag.Title = Model.Username;
}
<div class="">
    <div class="btn-group">
        <button id="route-viewer-btn" class="btn" onclick="viewRoutes()">Routes</button>
        <button class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a href="#" onclick="addRoute(true)">Morning Route</a></li>
            <li><a href="#" onclick="addRoute(false)">Evening Route</a></li>
        </ul>
    </div>
    <div class="btn-group">
        <button id="stop-viewer-btn" class="btn" onclick="viewStops()">Stops</button>
        <button class="btn icon-plus" onclick="addStop()"></button>
    </div>
    <div class="btn-group">
        <button id="bus-viewer-btn" class="btn" onclick="viewBuses()">Buses</button>
        <button class="btn icon-plus" onclick="addBus()"></button>
    </div>
    <div class="btn-group">
        <button id="driver-viewer-btn" class="btn" onclick="viewDrivers()">Drivers</button>
        <button class="btn icon-plus" onclick="addDriver()"></button>
    </div>
    <div class="btn-group">
        <button id="employee-viewer-btn" class="btn" onclick="viewEmployeesTable()">Employees</button>
        <button class="btn icon-plus" onclick="addEmployee()"></button>
    </div>
    <button id="usage-viewer-btn" class="btn" onclick="viewSystemUsage()">System Usage</button>
</div>
<div id="view-container">
</div>
<div id="system-usage-container">

</div>
