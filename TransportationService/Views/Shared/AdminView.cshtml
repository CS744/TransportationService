@model TransportationService.Models.OutputViewModel
@{
    ViewBag.Title = Model.Username;
}
<div class="">
    <div class="btn-group">
        <button class="btn" onclick="viewRoutes()">Routes</button>
        <button class="btn dropdown-toggle" data-toggle="dropdown" href="#">
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a href="#" onclick="addRoute(true)">Drops off at Work</a></li>
            <li><a href="#" onclick="addRoute(false)">Drops off at Home</a></li>
        </ul>
    </div>
    <div class="btn-group">
        <button class="btn" onclick="viewStops()">Stop</button>
        <button class="btn icon-plus" onclick="addStop()"></button>
    </div>
    <div class="btn-group">
        <button class="btn" onclick="viewBuses()">Bus</button>
        <button class="btn icon-plus" onclick="addBus()"></button>
    </div>
    <div class="btn-group">
        <button class="btn" onclick="viewDrivers()">Drivers</button>
        <button class="btn icon-plus" onclick="addDriver()"></button>
    </div>
    <div class="btn-group">
        <button class="btn" onclick="viewEmployees()">Employees</button>
        <button class="btn icon-plus" onclick="addEmployee()"></button>
    </div>
</div>
<div id="view-container">
</div>
