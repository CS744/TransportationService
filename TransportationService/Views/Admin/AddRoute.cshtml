@model TransportationService.Models.RouteModel
@{
    ViewBag.Title = "AddRoute";
}

<div id="modal" class="modal hide wideModal">
    @if (Model.UpdatingRoute)
    {
        <div class="modal-header">Update Route</div>
    }
    else
    {
        <div class="modal-header">Add a New Route</div>
    }
    <div class="alert alert-error hide" id="routeFailureMessage">
        <div class="error-text">The route name already exists. Please enter a unique route name.</div>
    </div>
    <div class="modal-body" style="max-height: 600px; overflow: auto;">
        <table align="center">
            <tr>
                <td id="nameDestinationRow" valign="top" width="300px">
                    <div>
                        <label for="routeNameText">Route Name:</label>
                        <input id="routeNameText" type="text" placeholder="Enter Route Name" value="@Model.Name"/>
                    </div>
                    <label>Route Status:</label>
                    <div class="btn-group" data-toggle="buttons-radio">
                        @if (Model.UpdatingRoute && !Model.IsActive)
                        {
                            <button type="button" class="btn btn-primary" id="routeActiveButton" title="ACTIVE">Active</button>
                            <button type="button" class="btn btn-primary active" id="routeInactiveButton" title="INACTIVE">Inactive</button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-primary active" id="routeActiveButton" title="ACTIVE">Active</button>
                            <button type="button" class="btn btn-primary" id="routeInactiveButton" title="INACTIVE">Inactive</button>
                        }
                    </div>
                </td>
                <td>
                    <div id="stopSection">
                        <label for="stops">Stops:</label>
                        <table>
                            <tr valign="middle">
                                <td rowspan="2">
                                    <select id="stops" style="width: 225px; margin-right: 15px;">
                                        @foreach (TransportationService.Utility.Stop stop in Model.AvailableStops)
                                        {
                                            bool foundStop = false;
                                            if (Model.UpdatingRoute)
                                            {
                                            <!-- have to do all this bullshit because the "Stops" and "AvailableStops" somehow weren't comparable.
                            By that I mean that I was doing a .Contains(stop) and they weren't matching when they should. -->
                        
                                                foreach (TransportationService.Utility.Stop selectedStop in Model.Stops)
                                                {
                                                    if (stop.StopId == selectedStop.StopId)
                                                    {
                                                        foundStop = true;
                                                        break;
                                                    }
                                                }
                                            }
                                            if (!foundStop)
                                            {
                                            <option Value="@stop.StopId">Stop ID: @stop.StopId, @stop.Location</option>
                                            }
                                        }
                                    </select>
                                </td>
                                <td>
                                    <a id="addStopButton" class="btn btn-info" onclick="addStopToRoute()" title="Add Stop To Route" style="float: right;">
                                        <i class="icon-white icon-plus" />
                                    </a>
                                </td>
                            </tr>
                        </table>
                        <div style="width: 100%">
                            <select size="4" id="selectedStops" style="max-height: 70px;">
                                @if (Model.UpdatingRoute)
                                {
                                    foreach (TransportationService.Utility.Stop stop in Model.Stops)
                                    {
                                    <option Value="@stop.StopId">Stop ID: @stop.StopId, @stop.Location</option>
                                    }
                                }
                            </select>
                        </div>
                        <div id="manageStopsButtons" class="btn-group">
                            <a class="btn btn-info" onclick="moveStopUp()">
                                <i class="icon-arrow-up icon-white" />
                            </a>
                            <a class="btn btn-info" onclick="moveStopDown()">
                                <i class="icon-arrow-down icon-white" />
                            </a>
                            <a class="btn btn-danger" onclick="removeStop()">
                                <i class="icon-remove icon-white" />
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        </table>
        <div id="busesSection" style="max-height: 150px; overflow: auto; margin-top: 20px;" class="well well-small">
            <table style="width: 100%;">
                <tr>
                    <td>
                        <select id="busList">
                            <option value="-1">--Bus--</option>
                            @foreach (TransportationService.Utility.Bus bus in Model.AvailableBuses)
                            {
                                if ((Model.IsToWork && bus.MorningAssignedTo == -1) || ((!Model.IsToWork && bus.EveningAssignedTo == -1)))
                                {
                                <option Value="@bus.BusId">Bus @bus.BusId (Capacity: @bus.Capacity)</option>
                                }
                            }
                        </select>
                    </td>
                    <td colspan="2">
                        <select id="driverList">
                            <option value="-1">--Driver--</option>
                            @foreach (TransportationService.Utility.Driver driver in Model.AvailableDrivers)
                            {
                                if ((Model.IsToWork && driver.MorningAssignedTo == -1) || ((!Model.IsToWork && driver.EveningAssignedTo == -1)))
                                {
                                <option Value="@driver.DriverId">Driver @driver.DriverId (@driver.Name)</option>
                                }
                            }
                        </select>
                    </td>
                </tr>
                <tr id="labelRow">
                    <td>
                        <label for="hourList">Departure Time:</label>
                    </td>
                    <td>
                        <label for="status">Status:</label>
                    </td>
                    <td></td>
                </tr>
                <tr id="departureTimeRow">
                    <td>
                        @if (Model.IsToWork)
                        {
                            <select id="hourList" style="width: 55px;">
                                <option value="06">06</option>
                                <option value="07">07</option>
                                <option value="08">08</option>
                                <option value="09">09</option>
                            </select>
                        }
                        else
                        {
                            <select id="hourList" style="width: 55px;">
                                <option value="03">03</option>
                                <option value="04">04</option>
                                <option value="05">05</option>
                                <option value="06">06</option>
                            </select>
                        }
                        <select id="minuteList" style="width: 55px;">
                            @for (int i = 0; i < 60; i = i + 5)
                            {
                                <option value="@i.ToString("D2")">@i.ToString("D2")</option>
                            }
                        </select>
                        @if (Model.IsToWork)
                        {
                            <span id="ampmLabel">AM</span>
                        }
                        else
                        {
                            <span id="ampmLabel">PM</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" data-toggle="buttons-radio">
                            <button type="button" class="btn btn-primary" id="driverBusActiveButton" title="ACTIVE">Active</button>
                            <button type="button" class="btn btn-primary active" id="driverBusInactiveButton" title="INACTIVE">Inactive</button>
                        </div>
                    </td>
                    <td align="right">
                        <a id="addDriverBusButton" class="btn btn-info" onclick="addDriverBus()" title="Add To Route">Add</a>
                    </td>
                </tr>
            </table>
        </div>
        <div>
            <select size="3" id="driverBusList" style="width: 100%; max-height: 70px;">
                @if (Model.UpdatingRoute)
                {
                    foreach (TransportationService.Models.DriverBus entry in Model.DriverBusList)
                    {
                        string status = entry.IsActive ? "ACTIVE" : "INACTIVE";
                        string departureTime = entry.Hour + ":" + entry.Minute + " " + entry.AMPM;
                        string driverDetail = "Driver: None";
                        string busDetail = "Bus: None";
                        TransportationService.Utility.DatabaseInterface db = new TransportationService.Utility.DatabaseInterface();
                        if (entry.DriverId != -1)
                        {
                            driverDetail = "Driver " + entry.DriverId + " (" + db.GetDriverById(entry.DriverId).Name + ")";
                        }
                        if (entry.BusId != -1)
                        {
                            busDetail = "Bus " + entry.BusId + " (Capactiy: " + db.GetBusByBusId(entry.BusId).Capacity + ")";
                        }
                        string text = busDetail + "; " + driverDetail + "; Departs: " + departureTime + "; " + status;
                        string busValue = entry.BusId == -1 ? "None" : entry.BusId.ToString();
                        string driverValue = entry.DriverId == -1 ? "None" : entry.DriverId.ToString();
                        string value = busValue + ";" + driverValue + ";" + departureTime + ";" + status;
                    <option value="@value">@text</option>
                    }
                }
            </select>
        </div>
        <div class="btn-group">
            <a class="btn btn-info" onclick="removeDriverBus(true)">Edit
            </a>
            <a class="btn btn-danger" onclick="removeDriverBus(false)">
                <i class="icon-remove icon-white" />
            </a>
        </div>
    </div>
    <div class="modal-footer">
        @if (Model.UpdatingRoute)
        {
            <button class="btn btn-success" onclick="updateRoute(@Model.RouteId);">Save</button>
        }
        else if (Model.IsToWork) 
        {
            <button class="btn btn-success" onclick="addNewRoute(true);">Add Route</button>
        } else {
            <button class="btn btn-success" onclick="addNewRoute(false);">Add Route</button>
        }
        <button class="btn" onclick="$('#modal').modal('hide')">Cancel</button>
    </div>
</div>
